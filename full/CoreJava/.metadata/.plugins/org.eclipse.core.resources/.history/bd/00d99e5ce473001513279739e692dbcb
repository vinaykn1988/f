<body>
<table border="1">

	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Height</th>
		</tr>
	</thead>
	<tbody>
		<c:forEach items="${requestScope.persons}" var="p">
		<tr>
			<td>${p.id}</td>
			<td>${p.fullName}</td>
			<td>${p.height}</td>
		</tr>
		</c:forEach>
	</tbody>				
</table>
